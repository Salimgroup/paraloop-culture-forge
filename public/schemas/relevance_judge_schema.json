{
  "name": "RelevanceJudge",
  "role": "Classify and score article candidates for Paraloop Culture Feed.",
  "input_schema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string"
      },
      "excerpt": {
        "type": "string"
      },
      "url": {
        "type": "string",
        "format": "uri"
      },
      "domain": {
        "type": "string"
      },
      "published_at": {
        "type": "string",
        "format": "date-time"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "region_hint": {
        "type": "string",
        "enum": [
          "US",
          "Caribbean",
          "Africa",
          "EU",
          "Asia",
          "Global",
          "LatAm",
          "MEA",
          "SEA"
        ]
      }
    },
    "required": [
      "title",
      "url",
      "domain",
      "published_at"
    ]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "score": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "impact_level": {
        "type": "string",
        "enum": [
          "low",
          "medium",
          "high"
        ]
      },
      "category": {
        "type": "string",
        "enum": [
          "globalization",
          "creator_economy",
          "policy",
          "tech_culture",
          "wellness",
          "other"
        ]
      },
      "topics": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "regions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "reasons": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "flags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "duplicate_of": {
        "type": "string"
      }
    },
    "required": [
      "score",
      "impact_level",
      "category",
      "reasons",
      "flags"
    ]
  },
  "instructions": "Score 0\u20131 for Paraloop relevance using:\n- Topic: globalization, creator economy, tech-culture crossovers, policy with cultural impact, wellness economics.\n- Freshness (last 48h preferred).\n- Source credibility.\n- Community impact for creators, youth, or underserved regions.\nSet impact_level by breadth of effect.\nUse flags like: [\"paywalled\",\"single-source\",\"sensational\",\"speculative\"].\nDo NOT invent facts. If unclear, lower score."
}